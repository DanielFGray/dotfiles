#!/usr/bin/env bash

source ~/.bash_utils

player=''
supported=( 'mpc' )

for x in "${supported[@]}"; do
	if command -v "$x" &> /dev/null; then
		player="$x"
		break
	fi
done

if [[ -z "$player" ]]; then
	err 'no supported music player found'
	err "    fzmp currently supports: ${supported[*]}"
	exit 1
fi

if ! has fzf; then
	err 'fzf not found'
	exit 1
fi

do_mpc() {
	if ! isRunning mpd; then
		err 'mpd not running'
		exit 1
	fi
	mapfile -t songs < <(mpc listall | sort -r | fzf --reverse -m -e +s)
	if (( ${#songs[@]} > 0 )); then
		printf '%s\n' "${songs[@]}" | mpc -q add
		index=$(mpc playlist | wc -l)
		if (( ${#songs[@]} > 1 )); then
			index=$(( $index - ${#songs[@]} + 1))
		fi
		mpc -q play "$index"
	fi
}

case "$player" in
	'mpc') do_mpc ;;
esac
