#!/usr/bin/env bash

if [[ -e ${HOME}/.bash_utils ]]; then
  source ${HOME}/.bash_utils
else
  echo -e "\e[31mbash_utils not found\e[0m" >&2
  exit 1
fi

has xscreensaver-command && screensaver-command --lock
if [[ "$1" == '--suspend' ]]; then
  sudo pm-suspend
else
  sleep 1
  xset dpms force off
fi
