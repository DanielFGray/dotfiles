#!/usr/bin/env bash

if [[ -e "${HOME}/.bash_utils" ]]; then
  source "${HOME}/.bash_utils"
else
  printf '\e[31mbash_utils not found\e[0m\n' >&2
  exit 1
fi

favs=('v' 'gvim' 'vim' 'emacs' 'vi' 'nano')
editor=$(select_from "${favs[@]}") || die "no editor found in ( ${favs[*]} )"
if in_term; then
  exec "$editor" "$@"
else
  ( exec x-terminal-emulator -e bash "$editor" $* &)
fi
