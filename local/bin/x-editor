#!/usr/bin/env bash

if [[ -e ${HOME}/.bash_utils ]]; then
  source ${HOME}/.bash_utils
else
  echo -e "\e[31mbash_utils not found\e[0m" >&2
  exit 1
fi

favs=('v' 'gvim' 'vim' 'emacs' 'vi' 'nano')
cmd=$(select-from "${favs[@]}") || die "no editor found in ( ${favs[*]} )"
editor="$cmd $*"
if inTerm; then
  exec $editor
else
  ( exec x-terminal-emulator -e bash $editor) &
fi
