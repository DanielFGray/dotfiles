#!/usr/bin/env bash

if [[ -e "${HOME}/.bash_utils" ]]; then
  source "${HOME}/.bash_utils"
else
  printf '\e[31mbash_utils not found\e[0m\n' >&2
  exit 1
fi

favs=('dolphin' 'nemo' 'nautilus' 'pcmanfm' 'thunar')
cmd=$(select_from "${favs[@]}") || die "no file manager found in ( ${favs[*]} )"
( exec $cmd "$@" &)
