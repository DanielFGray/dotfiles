#!/usr/bin/env bash

if [[ -e ${HOME}/.bash_utils ]]; then
  source ${HOME}/.bash_utils
else
  echo -e "\e[31mbash_utils not found\e[0m" >&2
  exit 1
fi

favs=('mupdf' 'zathura' 'apvlv' 'evince')
cmd=$(getCommandFallbacks ${favs[*]}) || die "no pdf viewer found in (${favs[*]})"
( exec $cmd "$@" ) &
