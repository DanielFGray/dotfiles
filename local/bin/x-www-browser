#!/usr/bin/env bash

if [[ -e "${HOME}/.bash_utils" ]]; then
  source "${HOME}/.bash_utils"
else
  printf '\e[31mbash_utils not found\e[0m\n' >&2
  exit 1
fi

browsers=(firefox brave chromium chrome luakit uzbl dwb qutebrowser)
cmd=$(select-from -c 'pgrep -f' "${browsers[@]}") ||
  cmd=$(select-from "${browsers[@]}") ||
  die "no browser found in (${browsers[*]})"
(exec $cmd "$@" &)
