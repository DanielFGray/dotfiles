#!/usr/bin/env bash

if [[ -e ${HOME}/.bash_utils ]]; then
	source ${HOME}/.bash_utils
else
	echo -e "\e[31mbash_utils not found\e[0m" >&2
	exit 1
fi

declare -a cmds

if silent tmux ls; then
	cmds=( 'tmux attach' )
else
	if has mux; then
		cmds=( 'mux start main' )
	else
		cmds=( 'tmux' )
	fi
fi

xrdb -load ~/.Xresources
x-terminal-emulator -e ${cmds[*]}
