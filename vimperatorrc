set gui=none
nnoremap j <C-d>
nnoremap k <C-u>

set hintchars=hjklasdfgqweruioptyzxcvbnm
set animations
set complete=slth

nnoremap <C-q> :js toggle_bottombar()<CR>

:js << EOF
function toggle_bottombar(p) {
 var bb = document.getElementById('liberator-bottombar');
 if (!bb)
 return;
 if (p == 'on') {
 Object.assign(bb.style, { height: '', overflow: '' });
 return;
 }
 if (p == 'off') {
 Object.assign(bb.style, { height: '0', overflow: 'hidden' });
 return;
 }
 bb.style.height = (bb.style.height == '') ? '0' : '';
 bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
EOF


